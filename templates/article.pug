extends base.pug

block scripts
	if page.mathjax
		script(type="text/x-mathjax-config").
			MathJax.Hub.Config({
				extensions: ["tex2jax.js", "TeX/AMSmath.js", "MatchWebFonts.js"],
				jax: ["input/TeX", "output/HTML-CSS"],
				MatchWebFonts: {
					matchFor: {
						"HTML-CSS": true,
						NativeMML: false,
						SVG: false
					},
					fontCheckDelay: 2000,
					fontCheckTimeout: 30 * 1000
				},
				tex2jax: {inlineMath: [["$", "$"], ["\\(", "\\)"]]}
			});

		script(async, src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-MML-AM_CHTML")

block title
	title= page.title

block main
	h1 !{page.title}
	| !{contents}
